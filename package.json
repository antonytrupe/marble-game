    "@types/jest": "^29.5.12",
    "@types/matter-js": "^0.19.7",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "process": "^0.11.10",
    "ts-jest": "^29.2.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  },
